# LabMove Digital Assistant Platform - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ==========================================
# LINE Messaging API Configuration
# ==========================================
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here

# ==========================================
# LINE Login / LIFF Configuration  
# ==========================================
LINE_LOGIN_CHANNEL_ID=your_login_channel_id_here
NEXT_PUBLIC_LIFF_ID=your_liff_id_here

# ==========================================
# Google Sheets Integration (Optional)
# ==========================================
# Base64 encoded service account JSON key
GOOGLE_SERVICE_ACCOUNT_KEY=your_base64_encoded_service_account_json
# Google Sheets spreadsheet ID for data storage
SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# ==========================================
# Redis Configuration
# ==========================================
# Redis connection URL for caching and idempotency
REDIS_URL=redis://localhost:6379
# Optional Redis password
REDIS_PASSWORD=

# ==========================================
# Security & Authentication
# ==========================================
# Random secret for NextAuth.js sessions
NEXTAUTH_SECRET=your_random_secret_here
# Application URL for NextAuth callbacks
NEXTAUTH_URL=http://localhost:3000

# ==========================================
# Monitoring & Observability
# ==========================================
# Sentry DSN for error monitoring
SENTRY_DSN=your_sentry_dsn_here
# Environment name for Sentry
SENTRY_ENVIRONMENT=development

# ==========================================
# Geocoding Service (Optional)
# ==========================================
# Google Maps API key for geocoding addresses
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ==========================================
# Development Configuration
# ==========================================
# Set to 'true' to enable debug logging
DEBUG=false
# Node environment
NODE_ENV=development

# ==========================================
# Rate Limiting & Performance
# ==========================================
# Redis TTL for idempotency keys (seconds)
IDEMPOTENCY_TTL=86400
# Redis TTL for geocoding cache (seconds)  
GEOCODING_CACHE_TTL=2592000
# Max requests per minute per IP
RATE_LIMIT_RPM=60

# ==========================================
# Data Retention Policies
# ==========================================
# Patient data retention period (days)
PATIENT_DATA_RETENTION_DAYS=2555
# Booking history retention (days)
BOOKING_HISTORY_RETENTION_DAYS=1095
# Chat log retention (days)
CHAT_LOG_RETENTION_DAYS=365
# Location data retention (days)
LOCATION_DATA_RETENTION_DAYS=30